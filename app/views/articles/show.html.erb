<div class="col-xs-12 col-md-10 col-md-offset-1">
  <div>
    <h2 class="show-header text-center">Article's Details</h2>
  </div>
  <div class="col-xs-12 col-md-10 well member">
    <div class="col-xs-2">
      <strong>Title:</strong>
    </div>
    <div class="col-xs-10 text-left">
    <h3><%= @article.title %></h3>
    </div>
  </div>
  <div class="col-xs-12 col-md-10 well member">
    <div class="col-xs-2"> 
    <strong>Description:</strong>
    </div>
    <div class="col-xs-10 text-left">
      <%= @article.description %>
    </div>
  </div>
  <div class="col-xs-12 col-md-10 well member">
    <div class="col-xs-2">
      <strong>Date Created:</strong>
    </div>
  <div class="col-xs-10 text-left">
    <%= @article.created_at %>
  </div>
  </div>
<br>
<br>
  <div class="col-xs-12 col-md-10 member">
  <%= link_to "Back", articles_path(@article), class: "btn btn-primary link" %>
  </div>
</div>